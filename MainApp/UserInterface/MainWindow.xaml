<Window x:Class="UserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        mc:Ignorable="d"
        Title="Диплом" Height="450" Width="800">
    <Grid x:Name="Grid1">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="0">
            <TextBlock HorizontalAlignment="Left" Width="200" Margin="20,20,0,0"><Run Text="Слово"/></TextBlock>
            <TextBox x:Name="textBox1" 
                     HorizontalAlignment="Left" Width="200" Margin="20 10 0 0"/>
            <TextBlock  HorizontalAlignment="Left" Width="200" Margin="20,10,0,0">Шифр</TextBlock>
            <TextBlock  HorizontalAlignment="Left" Width="200" Margin="20 10 0 0"/>
        </StackPanel>
        <StackPanel x:Name="Languages" Grid.Row="0" Grid.Column="1" Margin="20 20 0 0">
            <RadioButton HorizontalAlignment="Left" x:Name="ru" GroupName="Languages" Content="Русский" 
                         Checked="RadioButton_Checked" IsChecked="True" Width="100"/>
            <RadioButton x:Name="eng" HorizontalAlignment="Left" Width="100" GroupName="Languages" Content="Английский" 
                         Checked="RadioButton_Checked"/>
            <TextBlock HorizontalAlignment="Left" Width="200"><Run Text="Cпособ шифрования"/></TextBlock>
            <ComboBox HorizontalAlignment="Left" Name="CriptoList" Width="200" Height="30" VerticalAlignment="Top">
                <TextBlock>Шифр Виженера</TextBlock>
                <TextBlock>Шифр Виженера с обратной связью</TextBlock>
                <TextBlock>Шифр перестановки</TextBlock>
                <TextBlock>Шифр Хилла</TextBlock>
                <TextBlock>Модифицированный Шифр Хилла</TextBlock>
            </ComboBox>

        </StackPanel>

    </Grid>
</Window>
